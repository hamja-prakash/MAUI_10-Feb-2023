<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.ImageUploadDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ImageUploadDemo">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                x:Name="Image_Upload"
                HeightRequest="400"
                HorizontalOptions="Center"
                WidthRequest="400" />

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                Text="Upload Image" />

            <Button
                Clicked="UploadImage_Clicked"
                HorizontalOptions="Center"
                Text="Upload Image" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>